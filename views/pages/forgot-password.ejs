<style>
    .auth-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-2xl) var(--space-lg);
        background: linear-gradient(135deg, hsl(var(--color-primary) / 0.05), hsl(var(--color-accent) / 0.05));
    }

    .auth-container {
        width: 100%;
        max-width: 450px;
    }

    .auth-card {
        background: hsl(var(--color-surface));
        padding: var(--space-3xl);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-xl);
    }

    .auth-header {
        text-align: center;
        margin-bottom: var(--space-2xl);
    }

    .auth-header h1 {
        font-size: var(--font-size-3xl);
        margin-bottom: var(--space-sm);
    }

    .auth-header p {
        color: hsl(var(--color-text-muted));
    }

    .form-group {
        margin-bottom: var(--space-lg);
    }

    .form-group label {
        display: block;
        margin-bottom: var(--space-sm);
        font-weight: 500;
    }

    .form-group input {
        width: 100%;
        padding: var(--space-md);
        border: 1px solid hsl(var(--color-border));
        border-radius: var(--radius-md);
        font-size: var(--font-size-md);
        transition: border-color var(--transition-fast);
    }

    .form-group input:focus {
        outline: none;
        border-color: hsl(var(--color-primary));
    }

    .auth-footer {
        text-align: center;
        margin-top: var(--space-xl);
        color: hsl(var(--color-text-muted));
    }

    .auth-footer a {
        color: hsl(var(--color-primary));
        font-weight: 500;
    }

    .success-message {
        background: hsl(var(--color-success) / 0.1);
        border: 1px solid hsl(var(--color-success));
        color: hsl(var(--color-success));
        padding: var(--space-md);
        border-radius: var(--radius-md);
        margin-bottom: var(--space-lg);
        text-align: center;
    }
</style>

<%- include('../layouts/main', { title: 'Forgot Password - GrantWise AI' , body: ` <div class="auth-page">
    <div class="auth-container">
        <div class="auth-card fade-in">
            <div class="auth-header">
                <h1>Forgot Password?</h1>
                <p>Enter your email and we'll send you a reset link</p>
            </div>

            <form action="/auth/forgot-password" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="you@example.com" autofocus>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    Send Reset Link
                </button>
            </form>

            <div class="auth-footer">
                Remember your password? <a href="/login">Sign in</a>
            </div>
        </div>
    </div>
    </div>
    ` }) %>