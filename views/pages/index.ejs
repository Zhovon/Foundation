        color: rgba(255, 255, 255, 0.9);
        font-size: var(--font-size-lg);
        margin-bottom: var(--space-2xl);
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: var(--font-size-3xl);
        }

        .hero p {
            font-size: var(--font-size-lg);
        }

        .hero-cta {
            flex-direction: column;
            align-items: stretch;
        }
    }
</style>

