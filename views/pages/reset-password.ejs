<style>
    .auth-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-2xl) var(--space-lg);
        background: linear-gradient(135deg, hsl(var(--color-primary) / 0.05), hsl(var(--color-accent) / 0.05));
    }

    .auth-container {
        width: 100%;
        max-width: 450px;
    }

    .auth-card {
        background: hsl(var(--color-surface));
        padding: var(--space-3xl);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-xl);
    }

    .auth-header {
        text-align: center;
        margin-bottom: var(--space-2xl);
    }

    .auth-header h1 {
        font-size: var(--font-size-3xl);
        margin-bottom: var(--space-sm);
    }

    .auth-header p {
        color: hsl(var(--color-text-muted));
    }

    .form-group {
        margin-bottom: var(--space-lg);
    }

    .form-group label {
        display: block;
        margin-bottom: var(--space-sm);
        font-weight: 500;
    }

    .form-group input {
        width: 100%;
        padding: var(--space-md);
        border: 1px solid hsl(var(--color-border));
        border-radius: var(--radius-md);
        font-size: var(--font-size-md);
        transition: border-color var(--transition-fast);
    }

    .form-group input:focus {
        outline: none;
        border-color: hsl(var(--color-primary));
    }

    .password-requirements {
        font-size: var(--font-size-sm);
        color: hsl(var(--color-text-muted));
        margin-top: var(--space-sm);
    }

    .password-requirements ul {
        list-style: none;
        padding: 0;
        margin: var(--space-sm) 0 0 0;
    }

    .password-requirements li {
        padding: var(--space-xs) 0;
    }

    .password-requirements li::before {
        content: '✓';
        color: hsl(var(--color-success));
        margin-right: var(--space-sm);
    }
</style>

<%- include('../layouts/main', { title: 'Reset Password - GrantWise AI' , body: ` <div class="auth-page">
    <div class="auth-container">
        <div class="auth-card fade-in">
            <div class="auth-header">
                <h1>Reset Password</h1>
                <p>Enter your new password below</p>
            </div>

            <form action="/auth/reset-password" method="POST" id="resetForm">
                <input type="hidden" name="token" value="<%= token || '' %>">

                <div class="form-group">
                    <label for="password">New Password</label>
                    <input type="password" id="password" name="password" required placeholder="••••••••" minlength="8"
                        autofocus>
                    <div class="password-requirements">
                        <ul>
                            <li>At least 8 characters</li>
                            <li>Mix of letters and numbers</li>
                        </ul>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="••••••••">
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    Reset Password
                </button>
            </form>
        </div>
    </div>
    </div>

    <script>
        document.getElementById('resetForm').addEventListener('submit', function (e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
                return false;
            }
        });
    </script>
    ` }) %>